<h1>new discount for <%= @merchant.name %></h1>
<div class="form" style="padding: 25px">
  <%= form_with url: merchant_discounts_path(@merchant), method: :post, local: true do |form| %>
    <%= form.label "Percent Discount" %>
    <%= form.number_field :percent %><br>
    <%= form.label "Item Threshold" %>
    <%= form.number_field :threshold %><br>
    <%= form.submit :Create %>
  <% end %>
</div>
